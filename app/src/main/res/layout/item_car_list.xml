<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_car_list_item">

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:translationX="20dp"
        android:translationY="-40dp"
        android:background="@drawable/transparent_circle"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />

    <View
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/transparent_circle"
        android:translationX="5dp"
        android:translationY="-70dp" />

    <ImageView
        android:id="@+id/car_pic"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/car" />

    <TextView
        android:id="@+id/label_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_pic"
        android:layout_marginStart="8dp"
        android:text="@string/brand"
        style="@style/TextAppearance.App.Text.Label"
        />

    <TextView
        android:id="@+id/car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_pic"
        android:layout_marginStart="8dp"
        android:layout_toRightOf="@id/label_brand"
        android:text="brand"
        android:layout_alignBaseline="@id/label_brand"
        style="@style/TextAppearance.App.Body1"
        />


    <TextView
        android:id="@+id/label_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_brand"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/plate"
        style="@style/TextAppearance.App.Text.Label"
        />

    <TextView
        android:id="@+id/car_plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/car_brand"
        android:layout_alignBaseline="@id/label_plate"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/label_plate"
        android:text="plate"
        style="@style/TextAppearance.App.Body1"
        />

    <TextView
        android:id="@+id/text_click_to_reserve"
        style="@style/TextAppearance.App.HeadLine6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/label_plate"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="@string/click_to_reserve"
        android:textSize="20sp" />

    <View
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:translationX="-10dp"
        android:translationY="10dp"
        android:background="@drawable/transparent_circle"
        android:layout_alignParentBottom="true"
        />

    <ImageView
        android:id="@+id/delete_car"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/car_pic"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:src="@drawable/ic_delete" />

</RelativeLayout>
