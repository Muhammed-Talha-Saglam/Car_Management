<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_date_picker_fragment"
    tools:context=".views.fragments.datePickerPage.DatePickFragment">


    <View
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:translationX="-50dp"
        android:translationY="-75dp"
        android:background="@drawable/transparent_circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:translationX="75dp"
        android:translationY="-80dp"
        android:background="@drawable/transparent_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <TextView
        android:id="@+id/text_start_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:text="@string/start_date"
        android:textAppearance="@style/Widget.App.TextAppearance.StartDate"
        app:layout_constraintEnd_toEndOf="@+id/button_start_date"
        app:layout_constraintStart_toStartOf="@+id/button_start_date"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_start_date"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@style/Widget.App.Button.DatePickerButton"
        android:gravity="center"
        android:text="12 Aug 2021"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_start_date" />

    <TextView
        android:id="@+id/text_start_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextAppearance.StartDate"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="left"
        android:text="@string/start_time"
        app:layout_constraintEnd_toEndOf="@+id/button_start_time"
        app:layout_constraintStart_toStartOf="@+id/button_start_time"
        app:layout_constraintTop_toBottomOf="@id/button_start_date" />


    <Button
        android:id="@+id/button_start_time"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12:00"
        style="@style/Widget.App.Button.TimePickerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_start_time"
        />


    <TextView
        android:id="@+id/text_end_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextAppearance.EndDate"
        android:layout_marginTop="50dp"
        android:gravity="left"
        android:text="@string/end_date"
        app:layout_constraintEnd_toEndOf="@+id/button_end_date"
        app:layout_constraintStart_toStartOf="@+id/button_end_date"
        app:layout_constraintTop_toBottomOf="@id/button_start_time" />

    <Button
        android:id="@+id/button_end_date"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/Widget.App.Button.DatePickerButton"
        android:text="12 Aug 2021"
        app:layout_constraintTop_toBottomOf="@id/text_end_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/text_end_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.App.TextAppearance.EndDate"
        android:layout_marginTop="@dimen/margin_medium"
        android:gravity="left"
        android:text="@string/end_time"
        app:layout_constraintEnd_toEndOf="@+id/button_end_time"
        app:layout_constraintStart_toStartOf="@+id/button_end_time"
        app:layout_constraintTop_toBottomOf="@id/button_end_date" />


    <Button
        android:id="@+id/button_end_time"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="12:00"
        style="@style/Widget.App.Button.TimePickerButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_end_time"
        />

    <Button
        android:id="@+id/button_filter"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="25dp"
        android:text="@string/filter"
        style="@style/Widget.App.Button"
        android:backgroundTint="@color/green"
        />

</androidx.constraintlayout.widget.ConstraintLayout>