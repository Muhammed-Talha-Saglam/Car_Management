<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.carmanagement.views.fragments.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_carListFragment"
            app:destination="@id/carListFragment" />
    </fragment>
    <fragment
        android:id="@+id/carListFragment"
        android:name="com.example.carmanagement.views.fragments.CarListFragment"
        android:label="CarListFragment" >
        <action
            android:id="@+id/action_carListFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>